<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_TOASTS"
        tools:ignore="ManifestOrder" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Polypoly"
        tools:targetApi="31">
        <activity
            android:name=".ui.menu.lobby.GameLobbyActivity"
            android:exported="false"
            android:label="@string/title_activity_game_lobby"
            android:theme="@style/Theme.Polypoly" />
        <activity
            android:name=".ui.game.GameActivity"
            android:exported="true" /> <!-- ========================================= MENU ACTIVITIES -->
        <activity
            android:name=".ui.menu.lobby.JoinGameLobbyActivity"
            android:exported="false"
            android:label="@string/title_activity_join_game_lobby"
            android:theme="@style/Theme.Polypoly" />
        <activity
            android:name=".ui.menu.settings.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.Polypoly" />
        <activity
            android:name=".ui.menu.profile.ProfileModifyingActivity"
            android:exported="true"
            android:label="@string/title_activity_greeting"
            android:theme="@style/Theme.Polypoly" />
        <activity
            android:name=".ui.menu.profile.ProfileActivity"
            android:exported="true"
            android:label="@string/title_activity_greeting"
            android:theme="@style/Theme.Polypoly" />
        <activity
            android:name=".ui.menu.profile.CreateProfileActivity"
            android:exported="true"
            android:label="@string/title_activity_greeting"
            android:theme="@style/Theme.Polypoly" />
        <activity
            android:name=".ui.menu.WelcomeActivity"
            android:exported="true"
            android:label="@string/title_activity_welcome"
            android:theme="@style/Theme.Polypoly" />
        <activity
            android:name=".ui.menu.GuestMenuActivity"
            android:exported="true"
            android:label="@string/title_activity_welcome"
            android:theme="@style/Theme.Polypoly" />
        <activity
            android:name=".ui.menu.SignInActivity"
            android:exported="true"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/Theme.Polypoly">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>